{
  "extends": "@vitus-labs/tools-typescript/nextjs",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "~": [
        "src"
      ],
      "~/*": [
        "./*"
      ],
      "components/*": [
        "./components/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "vitus-labs.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.md",
    "**/*.mdx"
  ],
  "exclude": [
    "node_modules",
    "**/__stories__/**"
  ]
}
